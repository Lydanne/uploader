{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@/*":["../src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ]
}